        <servlet-class>ru.itis.inform.servlets.ServiceServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ServiceServlet</servlet-name>
        <url-pattern>/service</url-pattern>
    </servlet-mapping>


</web-app>